{
    "name": "tb_realms/php-backend",
    "description": "PHP backend for Tradeborn Realms game",
    "type": "project",
    "require": {
        "php": "^8.1",
        "illuminate/database": "^10.0",
        "vlucas/phpdotenv": "^5.0",
        "ramsey/uuid": "^4.0",
        "illuminate/queue": "^10.48",
        "firebase/php-jwt": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:5002 -t public",
        "test": "phpunit",
        "test:setup": "@php -r \"file_exists('tests/.env.testing') || copy('tests/.env.testing.example', 'tests/.env.testing');\"",
        "test:init": [
            "@test:setup",
            "@php -r \"@mkdir('storage/test', 0777, true);\"",
            "phpunit"
        ]
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
