RewriteEngine On

# Set proper MIME types for modern web assets
<IfModule mod_mime.c>
    # JavaScript modules - critical for Vite builds
    AddType application/javascript .js
    AddType application/javascript .mjs
    AddType text/javascript .js

    # CSS
    AddType text/css .css

    # Fonts
    AddType font/woff2 .woff2
    AddType font/woff .woff
    AddType font/ttf .ttf
    AddType font/eot .eot

    # Images
    AddType image/svg+xml .svg
    AddType image/webp .webp

    # JSON
    AddType application/json .json
</IfModule>

# Set the base path for tb_realms subdirectory
RewriteBase /tb_realms/

# Route API requests to backend
RewriteCond %{REQUEST_URI} ^/tb_realms/api/
RewriteRule ^api/(.*)$ backend/public/index.php [QSA,L]

# Handle client-side routing for React app
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/tb_realms/backend/
RewriteRule . index.html [L]

# Security headers
<IfModule mod_headers.c>
    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options nosniff

    # Enable XSS protection
    Header always set X-XSS-Protection "1; mode=block"

    # Prevent clickjacking
    Header always set X-Frame-Options SAMEORIGIN
</IfModule>

# Cache control for static assets
<IfModule mod_expires.c>
    ExpiresActive On

    # JavaScript and CSS - 1 year cache
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/css "access plus 1 year"

    # Images - 1 year cache
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"

    # Fonts - 1 year cache
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"

    # HTML - no cache
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>
